<div class="row" style="padding-top:10%;">
	<div class="col"></div>
	<div class="col-md-7">

<h1>Create a New Article!</h1>

<%= form_for :article, url: articles_path, html: {multipart: true} do |f|%>

<!-- Checking for errors -->
<div class="field" style="100%;">

<% if @article.errors.any? %>
<div id="error_explanation">
	<h2>
		<%= pluralize(@article.errors.count, "error")%>
		prohibited this article from being saved:
	</h2>
    <p>
    <ul>
    	<% @article.errors.full_messages.each do |msg| %>
    	<li>
    		<%= msg %>
    	</li>
    </ul>
    	<% end %>
    </p>
</div>
<% end %>
	<p>
		<%= f.label :title %>
		<%= f.text_field :title, class: 'form-control' %>
	</p>

	<p>
		<%= f.label :text %>
		<%= f.text_area :text, class: 'form-control' %>
	</p>
	<p>
		<%= f.label :photo %><br>
		<%= f.file_field :photo, class: 'form-control'%>
	</p>
	<p>
		<%= f.label :music %><br>
		<%= f.file_field :music, class: 'form-control'%>
	</p>
	<p>
		<%= f.label :movie %><br>
		<%= f.file_field :movie, class: 'form-control'%>
	</p>
	<p>
		<%= f.submit class: 'btn btn-lg btn-success' %>
			
	</p>
</div>
<% end %>

<p>
	<%= link_to 'Back', articles_path, class: 'btn btn-md btn-info' %>
	<%= link_to 'Home', welcome_index_path, class: 'btn btn-md btn-primary'   %>
</p>
</div>
<div class="col"></div>
</div>